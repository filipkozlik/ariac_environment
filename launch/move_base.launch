<?xml version="1.0"?>
<launch>

  <arg name="robot_name" default="pioneer"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find ariac_environment)/nav/costmap_common_params.yaml" command="load" ns="global_costmap"/> 
    <rosparam file="$(find ariac_environment)/nav/costmap_common_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find ariac_environment)/nav/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find ariac_environment)/nav/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ariac_environment)/nav/base_local_planner_params.yaml" command="load"/>
    <remap from="map" to="pioneer/map"/>
    <remap from="cmd_vel" to="pioneer/cmd_vel"/>
    <param name="controller_frequency" value="10.0"/>
  </node>

</launch> 